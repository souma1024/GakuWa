generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 役割
enum UserRole {
  admin
  user
}

// ユーザーステータス
enum UserStatus {
  pending
  active
  banned
  withdrawn
}

// メールOTPの用途
enum EmailOtpPurpose {
  signup
  password_reset
}

// 記事の状態を定義
enum ArticleStatus {
  draft
  published
  archived
}

model User {
  id           BigInt @id @default(autoincrement())
  handle       String @unique @db.VarChar(50)
  name         String @db.VarChar(100)
  email        String @unique @db.VarChar(255)
  passwordHash String @map("password_hash") @db.VarChar(255)

  role   UserRole   @default(user)
  status UserStatus @default(pending)

  avatarUrl String  @default("default_avatar.png") @map("avatar_url") @db.VarChar(255)
  profile   String? @db.Text
  discordId String? @map("discord_id") @db.VarChar(100)

  followersCount  Int @default(0) @map("followers_count")
  followingsCount Int @default(0) @map("followings_count")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // リレーション
  sessions          UserSession[]
  eventParticipants EventParticipant[]
  articles          Article[]

  @@map("users") // 実テーブル名
}

model EmailOtp {
  id BigInt @id @default(autoincrement())

  name         String @db.VarChar(100)
  email        String @db.VarChar(255)
  passwordHash String @map("password_hash") @db.VarChar(255)

  publicToken String @unique @map("public_token") @db.Char(64)
  codeHash    String @map("code_hash") @db.VarChar(255)

  expiresAt DateTime  @map("expires_at")
  usedAt    DateTime? @map("used_at")
  attempts  Int       @default(0)

  createdAt DateTime        @default(now()) @map("created_at")
  purpose   EmailOtpPurpose @default(signup)

  @@map("email_otps")
}

model UserSession {
  id     BigInt @id @default(autoincrement())
  userId BigInt @map("user_id")

  sessionToken String    @unique @map("session_token") @db.Char(64)
  expiresAt    DateTime  @map("expires_at")
  createdAt    DateTime  @default(now()) @map("created_at")
  revokedAt    DateTime? @map("revoked_at")

  // リレーション
  user User @relation(fields: [userId], references: [id])

  @@map("user_sessions")
}

model Event {
  id            BigInt   @id @default(autoincrement()) @db.UnsignedBigInt
  name          String   @db.VarChar(100)
  thumbnailUrl  String   @default("https://example.com/thumbnail.png") @map("thumbnail_url") @db.VarChar(255)
  details       String   @db.Text
  difficulty    Int      @db.UnsignedTinyInt
  isActive      Int      @default(1) @map("is_active") @db.UnsignedTinyInt
  createdAt     DateTime @default(now()) @map("created_at") @db.Timestamp(0)
  updatedAt     DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamp(0)
  startDateTime DateTime @map("start_datetime") @db.Timestamp(0)

  participants EventParticipant[]

  // 通知履歴テーブルとのリレーション
  notificationLogs NotificationLog[]

  @@map("events")
}

model EventParticipant {
  id BigInt @id @default(autoincrement()) @db.UnsignedBigInt

  userId  BigInt @map("user_id")
  eventId BigInt @map("event_id") @db.UnsignedBigInt

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamp(0)

  // リレーション
  user  User  @relation(fields: [userId], references: [id])
  event Event @relation(fields: [eventId], references: [id])

  @@unique([userId, eventId])
  @@map("event_participants")
}

model Article {
  id     BigInt @id @default(autoincrement()) @db.UnsignedBigInt
  handle String @db.VarChar(50)

  authorId BigInt @map("author_id")
  author   User   @relation(fields: [authorId], references: [id])

  title       String @db.VarChar(255)
  contentMd   String @map("content_md") @db.Text
  contentHtml String @map("content_html") @db.Text

  likesCount     Int @default(0) @map("likes_count") @db.UnsignedInt
  bookmarksCount Int @default(0) @map("bookmarks_count") @db.UnsignedInt
  viewsCount     Int @default(0) @map("views_count") @db.UnsignedInt

  status      ArticleStatus @default(draft)
  publishedAt DateTime?     @map("published_at") @db.DateTime(3)

  createdAt   DateTime     @default(now()) @map("created_at") @db.DateTime(3)
  updatedAt   DateTime     @updatedAt @map("updated_at") @db.DateTime(3)
  category    Category?    @relation(fields: [categoryId], references: [id])
  categoryId  BigInt?
  articleTags ArticleTag[]

  @@unique([handle], map: "articles_handle_key")
  @@index([authorId, status])
  @@map("articles")
}

model Category {
  id   BigInt @id @default(autoincrement())
  name String @unique @db.VarChar(50)

  articles Article[]

  @@map("categories")
}

model Tag {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())

  articles ArticleTag[]
}

model ArticleTag {
  id        BigInt @id @default(autoincrement())
  articleId BigInt @db.UnsignedBigInt
  tagId     Int

  article Article @relation(fields: [articleId], references: [id])
  tag     Tag     @relation(fields: [tagId], references: [id])

  @@unique([articleId, tagId])
  @@map("article_tags")
}

// 【新規】通知履歴テーブル
// 二重送信を防ぐため、送信成功ログをここに残します
model NotificationLog {
  id         BigInt   @id @default(autoincrement()) @db.UnsignedBigInt
  eventId    BigInt   @map("event_id") @db.UnsignedBigInt
  type       String   @db.VarChar(20) // "REMINDER" (3日前) or "START" (開始時)
  status     String   @db.VarChar(20) // "SUCCESS" or "FAILED"
  executedAt DateTime @default(now()) @map("executed_at") @db.Timestamp(0)

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  // 検索高速化用インデックス
  @@index([eventId, type])
  @@map("notification_logs")
}
