{
  "compilerOptions": {
    // 出力まわり
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",

    // Node.js 用解決
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // 型システム
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // 既存 JS も混在させる場合（少しずつ TS へ移行用）
    "allowJs": true,

    // デバッグ用
    "sourceMap": true
  },
  "include": ["src/**/*"]
}